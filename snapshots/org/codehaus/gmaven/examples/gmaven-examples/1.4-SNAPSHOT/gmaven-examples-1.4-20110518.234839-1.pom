<!-- $Id$ -->

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    
    <parent>
        <groupId>org.codehaus.gmaven</groupId>
        <artifactId>gmaven</artifactId>
        <version>1.4-SNAPSHOT</version>
    </parent>
    
    <groupId>org.codehaus.gmaven.examples</groupId>
    <artifactId>gmaven-examples</artifactId>
    <name>GMaven Examples</name>
    <packaging>pom</packaging>

    <description>
        Provides some example plugins implemented in Groovy.
    </description>
    
    <modules>
        <module>clean-maven-plugin</module>
        <module>install-maven-plugin</module>
    </modules>
    
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.apache.maven</groupId>
                <artifactId>maven-artifact-manager</artifactId>
                <version>2.0.10</version>
            </dependency>
            
            <dependency>
                <groupId>org.apache.maven</groupId>
                <artifactId>maven-artifact</artifactId>
                <version>2.0.10</version>
            </dependency>
            
            <dependency>
                <groupId>org.codehaus.plexus</groupId>
                <artifactId>plexus-digest</artifactId>
                <version>1.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    
    <!--
    NOTE: Using the Java 1.4 compatible Groovy 1.5 here for compatibility.
    -->
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.gmaven</groupId>
                <artifactId>gmaven-plugin</artifactId>
                <configuration>
                    <providerSelection>1.5</providerSelection>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>

